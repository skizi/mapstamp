	<ul>
	<% flash.each do |key, value| %>
	  <li class="alert alert-<%= key %>">
	    <%= value %>
	  </li>
	<% end %>
	</ul>
	
    <%= form_for(:session, url: login_path) do |f| %>
		<div class="c_mb30 email">
			<%= f.label :email %>
			<%= f.email_field :email, placeholder:"メールアドレス" %>
		</div>
		<div class="c_mb30 password">
			<%= f.label :password, value:'パスワード' %>
			<%= f.password_field :password, placeholder:"パスワード（6文字以上）", minlength:"6" %>
		</div>

		<%= hidden_field_tag :referer, flash[:referer] %>
		<%= f.submit "ログイン", class:"submit_btn0 btn0" %>

	<% end %>
